{
  "name": "polaris-monorepo",
  "version": "0.1.0",
  "description": "Polaris Client & Renderer Mono-repo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @polaris/client",
    "dev:renderer": "npm run dev -w @polaris/renderer",
    "dev:imager": "npm run dev -w @polaris/imager",
    "build": "npm run build --workspaces",
    "build:renderer": "npm run build -w @polaris/renderer",
    "build:client": "npm run build -w @polaris/client",
    "build:imager": "npm run build -w @polaris/imager",
    "typecheck": "npm run typecheck --workspaces",
    "bundle:assets": "node scripts/bundle-assets.cjs"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
